<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.netthreads.android.noiz2"
      android:versionName="1.3.8" android:versionCode="10">

    <uses-sdk android:minSdkVersion="3"></uses-sdk>
    
    <application android:icon="@drawable/icon" android:label="@string/app_name">

        <activity android:name=".LaunchActivity" 
                  android:label="@string/app_name"
                  android:screenOrientation = "portrait"
                  android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Noiz2ActivityCanvas"
            android:label="@string/app_name"
            android:screenOrientation = "portrait"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme" />

        <activity
            android:name=".Noiz2ActivityGL"
            android:label="@string/app_name"
            android:screenOrientation = "portrait"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme" />
            
        <activity
            android:name=".PreferencesActivity"
            android:label="@string/activity_preferences"
            android:screenOrientation = "portrait"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme"/>

        <activity 
            android:name=".HelpActivity"
            android:label="@string/activity_help"
            android:theme="@android:style/Theme.Dialog" />

        <activity 
            android:name=".AboutActivity"
            android:label="@string/activity_about"
            android:theme="@android:style/Theme.Dialog" />
        
    </application>
    
</manifest> 
